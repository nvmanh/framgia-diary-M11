<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#33B5E5</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="style_diary_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:ellipsize">end</item>
        <item name="android:contentDescription">@string/font_CenturyGothic</item>
        <item name="android:paddingLeft">@dimen/size_30dip</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/true_green</item>
        <item name="android:textColorHint">@color/light_dark</item>
    </style>

    <style name="diary_title" parent="@style/style_diary_text">
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:editable">false</item>
        <item name="android:contentDescription">@string/font_Angelina</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_30sp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">@color/true_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="diary_content" parent="@style/style_diary_text">
        <item name="android:minLines">3</item>
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:contentDescription">@string/font_CenturyGothic</item>
        <item name="android:layout_marginTop">@dimen/_size_10dip</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textColor">@color/light_dark</item>
        <item name="android:scrollbars">vertical</item>
    </style>

</resources>